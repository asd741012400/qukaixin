/* pages/blockchain/blockchain.wxss */

.blockchain{
  width: 750rpx;
  height: 1240rpx;
  position: relative;
}
.blockchain-img{
  width: 100%;
  height: 100%;
}
.blockchain-head{
  width: 510rpx;
  height: 300rpx;
  display: flex;
  position: absolute;
  background-image: linear-gradient(35deg, 
		#9fa3af 0%, 
		#dadde6 100%);
	border-radius: 15px;
  top: 90rpx;
  margin-left: 120rpx;
  flex-direction: column;
  align-items: center;
}
.blockchain-head-one{
  color: #666666;
  font-size: 40rpx;
  margin-top: 49rpx;
}
.blockchain-head-two{
  color: #ffffff;
  font-size: 26rpx;
  margin-top: 24rpx;
}
.blockchain-head-three{
  width: 18rpx;
  height: 10rpx;
  position: relative;
  margin-top: 18rpx;
}
.blockchain-head-three image{
  width: 100%;
  height: 100%;
  position: absolute;
}
.blockchain-body{
  width: 700rpx;
  height: 760rpx;
  margin-left: 25rpx;
  position: absolute;
  top: 304rpx;
  display: flex;
  flex-direction: column;
}
.blockchain-body-img{
  width: 100%;
  height: 100%;
}
.blockchain-body-head{
  display: flex;
  position: absolute;
  flex-direction: column;
  top: 80rpx;
  width: 100%;
  text-align: center;
}
.blockchain-body-head-one{
  color: #999999;
  font-size: 26rpx;
}
.blockchain-body-head-two{
  color: #fd8137;
  font-size: 42rpx;
  margin-top: 37rpx;
}
.blockchain-body-second{
  position: absolute;
  display: flex;
  flex-direction: column;
  text-align: center;
  top: 324rpx;
  width: 100%;
}
.blockchain-body-three{
  position: absolute;
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  top: 588rpx;
  width: 100%;
}
.blockchain-body-three .blockchain-body-head-two{
  width: 600rpx;
  height: 60rpx;
  overflow: hidden;
  /* white-space: nowrap;
  text-overflow: ellipsis; */
  margin: 36rpx auto 0;
}