/* pages/cooperation/cooperation.wxss */
.cooperation-HX{
  width: 750rpx;
  height: 20rpx;
  background-color: #f2f2f2;
}
.cooperation-head{
  width: 750rpx;
  height: 100%;
}
.cooperation-head-center{
  width: 702rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}
.cooperation-head-center-top{
  height: 120rpx;
  border-bottom: 1px solid #e5e5e5;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.cooperation-head-center-top-left{
  width: 80rpx;
  height: 80rpx;
}
.cooperation-head-center-top-left image{
  width: 100%;
  height: 100%;
}
.cooperation-head-center-top-center{
  display: flex;
  flex-direction: column;
  width: 400rpx;
  margin-left: 24rpx;
}
.cooperation-head-center-top-center-name{
  color: #333333;
  font-size: 28rpx;
}
.cooperation-head-center-top-center-txt{
  color: #999999;
  font-size: 24rpx;
  margin-top: 6rpx;
}
.cooperation-head-center-top-right{
  width: 144rpx;
  height: 60rpx;
  border-radius: 5px;
	border: solid 1px #e5e5e5;
  display: flex;
  font-size: 24rpx;
  color: #666666;
  align-items: center;
  justify-content: center;
  margin-left: 60rpx;
}