@import "../HeadSearch-Template/HeadSearch-Template.wxss";

page {
  background: #f2f2f2;
  height: 100%;
}


.display_none{
    display: none;
}
.display_show{
  display: block;
}
.container{
  overflow: hidden;
}
.hs_Header{
  position: fixed;
  z-index: 100;
  width: 100%;
}
/* -------------------------------------------- */

.Head-Navigation {
  width: 100%;
  height: 80rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #e5e5e5;
  margin-top: 80rpx;
}

.Head-Navigation-Binds view {
  width: 248rpx;
  height: 26rpx;
  border-right: 1px solid #e5e5e5;
  text-align: center;
  line-height: 26rpx;
  margin-top: 27rpx;
  font-size: 26rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: center;
}
.active view{
  color: #fd8137;
}

.Head-Navigation-Binds:last-child view{
  border-right: 0px;
}

.Head-Navigation-Binds{
  width: 248rpx;
  height: 80rpx;
}

.Head-Navigation view image {
  width: 13rpx;
  height: 6rpx;
  margin-top: 12rpx;
  margin-left: 10rpx;
}

/* ----------------------头部导航---------------------- */

.hs_events{
  margin-top: 170rpx;
