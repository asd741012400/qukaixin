  padding-left: 30rpx;
}
.hs_nearby .hs_nearby_body .hs_nearby_km scroll-view{
  height: 668rpx;
}
.hs_nearby .hs_nearby_body .hs_nearby_km scroll-view text{
  line-height: 68rpx;
  display: block;
}
.hs_nearby .hs_nearby_body .hs_nearby_km scroll-view text.active{
